{% import "macros.html" as macros %}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ lang }}">
    <id>{{ feed_url | safe }}</id>
    <title>{{ config.title }}{% if term %} - {{ term.name }}{% endif %}</title>
    {% if config.description -%}
    <subtitle>{{ macros::description() }}</subtitle>
    {%- endif %}

    <updated>{{ last_updated | date(format="%+") }}</updated>

    <link rel="alternate" type="text/html" href="
      {%- if section -%}
    {{ section.permalink | escape_xml | safe }}
      {%- else -%}
    {{ config.base_url | escape_xml | safe }}
      {%- endif -%}
    "/>
    <link rel="self" href="{{ feed_url | safe }}" type="application/atom+xml" />

    {% for page in pages -%}
    <entry xml:lang="{{ page.lang }}">
        <id>{{ page.permalink | safe }}</id>
        <title>{{ page.title }}</title>

        {% set authors = page.authors | concat(with=config.extra.author.name | default(value=config.author)) | unique(case_sensitive=false) %}
        {% for author in authors -%}
        <author>
        <name>{{ author }}</name>
        </author>
        {%- endfor %}

        <published>{{ page.date | date(format="%+") }}</published>
        <updated>{{ page.updated | default(value=page.date) | date(format="%+") }}</updated>

        <link href="{{ page.permalink | safe }}"/>
        <link rel="alternate" href="{{ page.permalink | safe }}" type="text/html"/>

        {% if page.summary -%}
        <summary type="html">{{ page.summary }}</summary>
        {%- endif %}
        <content type="html">{{ page.content }}</content>
    </entry>
    {%- endfor %}
</feed>
